#!/usr/bin/env node

'use strict';

var resolve  = require('resolve').sync
var path     = require('path')
var base     = ''
var location = path.join('generators', 'command', 'command')

try {
  base = resolve('joosy', {
    basedir: process.cwd(),
    extensions: ['.coffee'],
    packageFilter: function(pkg) { pkg.main = location; return pkg; }
  });
} catch (ex) {
  base = path.join('..', location);
}

require('coffee-script');
require(base)();